<% if @realisation.link.include? "http" %>
  $(document).ready(function() {
    $(window).click(function() {
      $(".modal").html("");
      $(".modal").fadeOut();
    });
    $(".modal").fadeIn();
    $(".modal").html('<%= image_tag @realisation.link %>');
  });
<% else %>
  $(document).ready(function() {
    $(window).click(function() {
      $(".modal").html("");
      $(".modal").fadeOut();
    });
    var video = $("<%= j render 'video' %>");
    $('.modal').fadeIn();
    $('.modal').html(video);
  });
<% end %>

