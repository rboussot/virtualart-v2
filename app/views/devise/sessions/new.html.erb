<!-- =============== ROW & CONTAINER =============== -->
<div class="container">
  <div class="row">
    <!-- =============== VOLET GAUCHE =============== -->
    <div class="col-sm-8">
    <!-- ===== LOGIN ===== -->
      <div class= "block">
        <%= image_tag "puce-v5.png", class: "puce" %>
        <h4>Mon compte</h4>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class= "forgot">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <i><%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %><br></i>
          <% end -%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Je me connecte" %>
        </div>
        <% end %>
      </div>
    <!-- ===== SIGNUP ===== -->
      <div class= "block">
        <%= image_tag "puce-v5.png", class: "puce" %>
        <h4>Créer un compte gratuit</h4>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, required: true %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Je m'inscris" %>
            </div>
          <% end %>
    </div>
    <!-- =============== CLOSE VOLET GAUCHE =============== -->
    </div>
    <!-- =============== VOLET DROIT =============== -->
    <div class="col-sm-4">
    <div class= "big-margin hidden-xs hidden-sm"></div>
      <!-- ===== INSCRIPTION ===== -->
      <div class= "block">
      <%= image_tag "puce-v5.png", class: "puce" %>
        <h4>Inscription et connexion</h4>
          <p>La création d'un compte est gratuite. Une fois que vous avez un compte, vous pouvez accéder à votre profil et vous inscrire à mes cours en vidéo, à l'atelier et à mes stages.</p>
      </div>
    </div>
<!-- =============== CLOSE ROW & CONTAINER =============== -->
  </div>
</div>


